.top-bg {
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  width: 100%;
  height: 460rpx;
  /* background-repeat: no-repeat; */
  /* background-size: 100%; */
  background: #4db7ff;
}

.contain {
  position: absolute;
  top: 70rpx;
  left: 0rpx;
  width: 100%;
  padding: 0rpx 40rpx 0rpx 40rpx;
  box-sizing: border-box;
  /* background: #b2b2b2; */
}
.card {
  border-radius: 32rpx;
  top: 70rpx;
  width: 100%;
  background: #fff;
  padding: 50rpx 60rpx;
  box-sizing: border-box;
  box-shadow: 0 0 20rpx #eee;
}

.title{
  margin-top: 24rpx;
  width: 100%;
  text-align: left;
  font-size: 35rpx;
  font-weight: 600;
  letter-spacing: 3rpx;
}

.goodinfo {
  margin-top: 24rpx;
  width: 100%;
  height: 92rpx;
  background: #f1f3f8;
  border-radius: 10rpx;
  text-align: left;
  padding: 0 36rpx;
  box-sizing: border-box;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #8c9aa8;
}

.upload {
  margin-top: 30rpx;
  width: 40%;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: flex-start;
  /* background: linear-gradient(#fae74e, #ff9a2f); */
  border-radius: 10rpx;
  color: #4db7ff;
  font-size: 35rpx;
  font-weight: 500;
  /* letter-spacing: 4rpx; */
  border: 1px solid #4db7ff; 
}

.submitButton {
  margin-top: 50rpx;
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: linear-gradient(#4db7ff, #8dc6ec);
  border-radius: 60rpx;
  color: #fff;
  font-size: 40rpx;
  letter-spacing: 4rpx;
  box-shadow: 0 0 20rpx #eee;
  border: none;
}

.good_Info{
   margin-top: 50rpx;
  margin-left: 100rpx;
  margin-bottom: 80rpx;
  margin-right: 100rpx; 
  border-color: #cbcbcc;
  border-style: solid;
  display: flex;
  flex-direction:column;
  border-radius: 30rpx;
}
.input_wrap{
  border-style: solid;
  height: 14rpx;
  width: 400rpx;
  margin-left: 38rpx;
  margin-right: 38rpx;
  margin-top: 38rpx;
  margin-bottom: 38rpx;
  border-color: #cbcbcc;
}

.picker{
  border-style: solid;
  height: 14rpx;
  width: 400rpx;
  margin-left: 25rpx;
  margin-top: 38rpx;
  margin-bottom: 38rpx;
  border-color: #cbcbcc;
}

