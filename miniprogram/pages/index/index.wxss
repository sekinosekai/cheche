.top_box {
      width: 100%;
      background: #f3f5f7;
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 20rpx 30rpx;
      box-sizing: border-box;
}

.top_list {
      width: 50rpx;
      height: 50rpx;
}

.search_box {
      width: 720rpx;
      height: 66rpx;
      border-radius: 33rpx;
      background: #fff;
      display: flex;
      align-items: center;
      justify-content: center;
}

.search_ico {
      width: 32rpx;
      height: 32rpx;
}

.search_text {
      padding-left: 10rpx;
      font-size: 28rpx;
      letter-spacing: 2rpx;
      color: rgb(167, 167, 167);
}

/* .banner {
      width: 100%;
      display: flex;
